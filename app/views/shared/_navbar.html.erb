<div class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between <%= 'navbar-transparent' if params[:action] == "home" || params[:action] == "index" %>">
  <div class="d-flex justify-content-center align-items-center logo">
    <%= link_to root_path do %>
      <%= image_tag "logo-safarent", alt: "alttext", class: "logo-navbar" %>
    <% end %>
     <%= link_to "Safarent", root_path, class:"logo-naming"%>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link #{'white-item-navbar' if params[:action] == "home" || params[:action] == "index"}" %>
        </li>
        <li class="nav-item">
          <%= link_to "#{current_user.email}", profil_path(current_user), class: "nav-link #{'white-item-navbar' if params[:action] == "home" || params[:action] == "index"}" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "", class:"fas fa-user-tie #{'white-item-navbar' if params[:action] == "home" || params[:action] == "index"}", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "View my profile", profil_path(current_user), class: "dropdown-item" %>
            <%= link_to "Edit My profile", edit_user_registration_path , class: "dropdown-item" %>
            <%= link_to "Add an animal", new_animal_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class:"nav-link #{'white-item-navbar' if params[:action] == "home" || params[:action] == "index"}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in", new_user_session_path, class:"nav-link #{'white-item-navbar' if params[:action] == "home" || params[:action] == "index"}" %>
        </li>
        <li class="nav-item ninja">
          <%= link_to "", new_user_session_path, class:"fas fa-user-ninja avatar-navbar #{'white-item-navbar' if params[:action] == "home" || params[:action] == "index"}" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
