<div class="navbar navbar-expand-sm navbar-light d-flex justify-content-between <%= 'navbar-home' if params[:action] == "home" %>">
  <%= link_to root_path do %>
    <%= image_tag "logo-safarent", alt: "alttext", class: "logo-navbar" %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "#{current_user.email}", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "", class:"fas fa-user-tie", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "View my profile", "#", class: "dropdown-item" %>
            <%= link_to "Edit My profile", edit_user_registration_path , class: "dropdown-item" %>
            <%= link_to "Add an animal", new_animal_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in", new_user_session_path, class:"nav-link" %>
        </li>
        <li class="nav-item ninja">
          <%= link_to "", new_user_session_path, class:"fas fa-user-ninja" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
