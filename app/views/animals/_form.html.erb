  <%= f.input :animal_type, placeholder: "Felin" %>
  <%= f.input :species, placeholder: "Tiger" %>
  <%= f.input :description, placeholder: "Tigrou is Winnie the Poo's bestfriend!" %>
  <%= f.input :price_per_day, placeholder: "50â‚¬" %>
  <%= f.input :street, placeholder: "16 Villa Gaudelet" %>
