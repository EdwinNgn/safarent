<% if @animal.photos.attached? %>
  <div style="background-color: rgb(245, 245, 245)">
    <div style=" background-image: linear-gradient(rgba(245,255,250,0.3), rgba(0,0,0,0.3)), url('https://trello-backgrounds.s3.amazonaws.com/SharedBackground/original/5b8c23cfb4d4773db6bdd8f7a9f444bc/photo-1581838158684-b0cb031d5d8c')">
      <div class="container" style="max-width: 1300px;">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="<%= cl_image_path @animal.photos[0].key %>" alt="First slide">
            </div>
            <% @animal.photos.drop(1).each do |photo| %>
              <div class="carousel-item">
                <img class="d-block w-100" src="<%= cl_image_path photo.key %>" alt="Second slide">
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div style="background-color: rgb(245, 245, 245)">
    <div style=" background-image: linear-gradient(rgba(245,255,250,0.3), rgba(0,0,0,0.3)), url('https://trello-backgrounds.s3.amazonaws.com/SharedBackground/original/5b8c23cfb4d4773db6bdd8f7a9f444bc/photo-1581838158684-b0cb031d5d8c')">
      <div class="container" style="max-width: 1300px;">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="https://images.unsplash.com/photo-1551972251-12070d63502a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80" alt="First slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div style="position:relative">
  <div class="container">
    <div class="shadow-sm p-3 mb-5 mt-5 bg-white rounded">
      <h1><%= @animal.name.capitalize %></h1>
      <p>A little bit about <%= @animal.name.capitalize %>: <%= @animal.description %></p>
      <p>Where: <%= @animal.location %></p>
      <p> Owner:  <%= @animal.user.email %></p>
    </div>
  </div>

  <div class="container">
    <p> <%= link_to "see the owner", profil_path(@animal.user) %> </p>
    <p> <%= link_to("edit", edit_animal_path(@animal)) %></p>
  </div>


  <div class="container shadow-sm p-3 mb-5 mt-5 bg-white rounded">
    <div class="chat d-flex flex-column justify-content-between p-3">
      <div class="messages-title">
        <div class="border-bottom">
          <h2>Reviews for <%= @animal.name.capitalize %></h2>
        </div>
        <div class="messages">

          <div class="message">
            <!-- Code one message here -->
            <img src="https://avatars0.githubusercontent.com/u/57433401?v=4" alt="Paul" class="profil-pic">
            <div class="message-info">
              <h2 class ="sender-name"> Paul Chapeau </h2>
              <p class = "notif-message">This little guy is so cute</p>
            </div>
          </div>

          <div class="message">
            <!-- Code one message here -->
             <img src="https://avatars2.githubusercontent.com/u/59232862?v=4https://avatars2.githubusercontent.com/u/59232862?v=4" alt="Ed" class="profil-pic">
            <div class="message-info">
              <h2 class ="sender-name"> Edwin Nguyen </h2>
              <p class = "notif-message"> Adorable</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container shadow-lg mb-5 mt-5 bg-white rounded-pill booking-form" id="booking-form-div" data-bookings="<%= @bookings_dates.to_json %>">
    <div class="row">
      <div class="col-12">
        <h2>Book <%= @animal.name.capitalize %> now!</h2>
        <%= render 'bookings/form', booking: @booking, animal: @animal %>
      </div>
    </div>
  </div>
</div>
