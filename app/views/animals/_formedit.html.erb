<%= simple_form_for @animal do |f| %>
  <%= f.input :name %>
  <%= f.input :animal_type, collection: ["Mammal", "Fish", "Bird", "Reptile", "Amphibian"] %>
  <%= f.input :species %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.submit "update"%>
<% end %>
