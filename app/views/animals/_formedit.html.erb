<%= simple_form_for @animal do |f| %>
  <%= f.input :name %>
  <%= f.input :animal_type, collection: ["Mammal", "Fish", "Bird", "Reptile", "Amphibian"] %>
  <%= f.input :species %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Update", class:"btn btn-primary my-2"%>
<% end %>
