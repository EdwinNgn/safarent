<%= simple_form_for [animal, booking] do |f| %>
  <%= f.input :start_date, placeholder: 'Start Date',as: :string, required: true, input_html: { class: "mb-2 mr-sm-2 d-none", id: "range_start" } %>
  <%= f.input :end_date, label: false, as: :string, required: false, input_html: { id: "range_end", class: "d-none" } %>
  <%= f.button :submit, "Let's book it", class: "btn btn-warning", id: "submit-btn" %>

<% end %>

