<%= simple_form_for [@booking, @review] do |f| %>
  <% if @reviewer == "renter" %>
    <%= f.input :description_animal %>
    <%= f.input :rating_animal, collection: 1..5 %>
    <%= f.input :description_owner %>
    <%= f.input :rating_owner, collection: 1..5 %>
  <% else %>
    <%= f.input :description_renter %>
    <%= f.input :rating_renter, collection: 1..5 %>
  <% end %>
  <%= f.submit "Add a rating!", class:"btn btn-primary my-2"%>
<% end %>
